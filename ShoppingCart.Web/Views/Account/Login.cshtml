@model ShoppingCart.Web.ViewModel.LoginViewModelNew

@{
    ViewBag.Title = "Login";
    //Layout = "~/Views/Shared/UserLayout.cshtml";
}
<head>
    @Scripts.Render("~/Scripts/jquery.validate.min.js")
    @Scripts.Render("~/Scripts/jquery.validate.unobtrusive.min.js")

    @{Html.EnableClientValidation(true);}
    @{Html.EnableUnobtrusiveJavaScript(true);}
</head>

@*<h2>Login</h2>*@
@using (Html.BeginForm("Login", "Account", FormMethod.Post))
{
    <div id="mainBody">
        <div class="container">
            <div class="row">
                <div class="span9">
                    <ul class="breadcrumb">
                        <li><a href="/Home/Index">Home</a> <span class="divider">/</span></li>
                        <li class="active">Login</li>
                    </ul>
                    <h3> Login</h3>
                    <hr class="soft" />

                    <div class="row">
                        <div class="span1"> &nbsp;</div>
                        <div class="span4">
                            <div class="well">
                                <h5>LOGIN HERE</h5>
                                <form>
                                    <div class="control-group">
                                        @Html.LabelFor(temp => temp.Username, new { @class = "control-label" })
                                        <div class="controls">
                                            @Html.TextBoxFor(temp => temp.Username, new { placeholder = "Username", @class = "span3" })
                                            @Html.ValidationMessageFor(temp => temp.Username)
                                        </div>
                                    </div>
                                    <div class="control-group">
                                        @Html.LabelFor(temp => temp.Password, new { @class = "control-label" })
                                        <div class="controls">
                                            @Html.PasswordFor(temp => temp.Password, new { placeholder = "Password", @class = "span3" })
                                            @Html.ValidationMessageFor(temp => temp.Password)
                                        </div>
                                    </div>
                                    @Html.ValidationSummary()
                                    <div class="control-group">
                                        <div class="controls">
                                            <button type="submit" class="btn">Login</button> <a href="#">Forget password?</a>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                        <div class="span2"> 
                            <div class="span2" style="padding:100px 100px">
                                ( OR )                  <a class="btn btn-success" href="/Account/Register">Register Here</a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div>
                <a class="btn btn-info" href="/">Back</a>
            </div>
        </div>
    </div>
}
